doctype html
html(class='no-js' lang='en')

  head
    block head

      meta(charset="utf-8")
      title .Dotted Pixels
      meta(name="viewport", content="width=device-width, initial-scale=1")
      meta(name="author", content="Robert Schaap")
      link(href="https://fonts.googleapis.com/css?family=Open+Sans|Roboto+Slab", rel="stylesheet")
      link(href="/css/normalize.css", rel="stylesheet", type="text/css")
      link(href="/css/stylesheet.css", rel="stylesheet", type="text/css")
      link(rel="icon", type="image/png", href="images/favicon.png", sizes="32x32")

  body
    header(role="heading")

      nav#mainheading(role="navigation" class="clear")
        a(href="/")
          h1#title .Dotted Pixels

        #signinup
          if uuid
            a(href="/posts/new") +
            a(href="/users/profile") Me
            a(href="/users/logout") Sign Out
          else
            a(href="/users/login") Sign In
            a(href="/users/new") Sign Up

      nav#sitenav(role="navigation")
        a(href="/") Home
        a(href="/posts?cat=All%20Posts") All Posts
        a(href="/posts?cat=Technology") Technology
        a(href="/posts?cat=Design") Design
        a(href="/posts?cat=Entrepreneur") Entrepreneur
        a(href="/posts?cat=Anything") Anything

    block content

    footer(role='contentinfo')
      p .Dotted Pixels is a mad creation of Robert Schaap. This project is in no way affiliated with the actual domain www.dottedpixels.com which was registered but not in use at the time of this project.
    script(src='https://code.jquery.com/jquery-3.2.1.js')
